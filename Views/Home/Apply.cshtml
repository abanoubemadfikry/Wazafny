@model Job_Offers_Website.Models.ApplyForJob

@{
    ViewBag.Title = "Apply";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Apply</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>ApplyForJob</h4>
    <div>
        @if (ViewBag.Result1 != null)
        {
            <h3 class="alert alert-success">@ViewBag.Result1</h3>
        }
    </div>
    <div>
        @if (ViewBag.Result2 != null)
        {
            <h3 class="alert alert-danger">@ViewBag.Result2</h3>
        }
    </div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <h3>@Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" })</h3>
        <div class="col-md-12">
            @Html.TextAreaFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="تاكيد" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
