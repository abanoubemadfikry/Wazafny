@model Job_Offers_Website.Models.Job

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>تفاصيل الوظيفه</h2>

<div>
    <h4>Job</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="alert alert-primary" style="width:400px;height:50px">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt class="alert alert-info"style="width: 400px; height: 50px" >
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobTitle)
        </dd>

        <dt class="alert alert-primary" style="width: 400px; height: 50px">
            @Html.DisplayNameFor(model => model.JobContent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobContent)
        </dd>

        <dt class="alert alert-primary"style="width: 400px; height: 50px" >
            @Html.DisplayNameFor(model => model.JobImage)
        </dt>

        <dd>
            <img src="~/Uploads/@Html.DisplayFor(m => m.JobImage)" 
                 alt="@Html.DisplayFor(m => m.JobImage)"
                 class="card card-body img-thumbnail"
                 style="height:200px;width:200px"/>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Apply For Job", "Apply", new { Jobid = Model.Id }, htmlAttributes: new { @class = "btn btn-success" }) |
    @*@Html.ActionLink("Back to List", "Index", new { @class="btn btn-info"})*@
    <a href="@Url.Action("Index","Home") " class="btn btn-outline-dark">العوده الي الصفحه الرئيسيه</a>
</p>
